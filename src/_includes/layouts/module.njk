{% extends "layouts/page.njk" %}

{% block content %}
{% set modules = collections.modulePagesSorted %}
<div class="container">
    <div class="row">
        <div class="col-3 sidebar-menu">
            <!-- <h3>Contents</h3> -->
            <ol>
                {% for module in modules %}
                <li><a href="{{ module.url }}">{{ module.data.title}}</a></li>
                {% endfor %}
            </ol>
        </div>
        <div class="col-9 text-content">
            <h1>{{ title }}</h1>
            {% if bannerImage %}
            <div class="image-column">
                <img src="{{ bannerImage }}" alt="banner image">
            </div>
            {% endif %}
            {{ content | safe }}
        </div>
    </div>
</div>
