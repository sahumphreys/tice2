{% extends "layouts/page.njk" %}

{% block content %}
{% set theory_topics = collections.theoryPagesSorted %}
<div class="theory-container">
    <div class="sidebar">
        <ul>
            {% for topic in theory_topics %}
            <li><a href="{{ topic.url }}">{{ loop.index }} - {{ topic.data.title }}</a></li>
            {% endfor %}
        </ul>    
    </div>
    
    <div class="main-content">
        <h1>{{ title }}</h1>
        {% if bannerImage %}
        <div class="module-header">
            <div class="image-column">
                <img src="{{ bannerImage }}" />
            </div>
        </div>
        {% endif %}
            <!-- <div class="button-column">
                <a class="button">Notes</a>
                <a class="button">Slide deck</a>
                <a class="button">Questions</a>
                <a class="button">Downloads</a>
                <a class="button">Recommended Reading</a>
            </div> -->
        {{ content | safe }}
    </div>
    
</div>
{% endblock %}